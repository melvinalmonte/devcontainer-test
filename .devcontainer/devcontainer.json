{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "runArgs": [
    "--device=/dev/fuse",
    "--cap-add=SYS_ADMIN",
    "--cap-add=NET_ADMIN",
    "--cap-add=SETUID",
    "--cap-add=SETGID",
    "--cap-add=SYS_RESOURCE",
    "--security-opt",
    "seccomp=unconfined",
    "--security-opt",
    "apparmor=unconfined",
    "--tmpfs",
    "/tmp:exec,suid,size=2g",
    "--tmpfs",
    "/run:exec,suid,size=2g",
    "--tmpfs",
    "/sys/fs/cgroup:rw,exec,suid,size=100m,mode=755"
  ],
  "containerEnv": {
    "TMPDIR": "/tmp"
  }
}